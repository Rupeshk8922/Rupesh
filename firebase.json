{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "functions/firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "host": "127.0.0.1",
      "port": 9098
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 9100
    },
    "functions": {
      "host": "127.0.0.1",
      "port": 5101
    },
    "hosting": {
      "host": "127.0.0.1",
      "port": 5500
    },
    "storage": {
      "host": "127.0.0.1",
      "port": 9199
    },
    "database": {
      "host": "127.0.0.1",
      "port": 9001
    },
    "ui": {
      "host": "127.0.0.1",
      "port": 4100
    },
    "hub": {
      "host": "127.0.0.1",
      "port": 4400
    },
    "logging": {
      "host": "127.0.0.1",
      "port": 4500
    },
    "apphosting": {
      "host": "127.0.0.1",
      "port": 9099,
      "rootDirectory": "public",
      "startCommand": "npm start"
    },
    "singleProjectMode": true
  }
}
