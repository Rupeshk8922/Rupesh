{
  "compilerOptions": {
    "target": "ESNext",                      // Use the latest JavaScript features
    "module": "ESNext",                      // Use ES modules syntax
    "lib": ["DOM", "DOM.Iterable", "ESNext"],  // Include DOM and latest JS libs
    "allowJs": true,                         // Allow JavaScript files to coexist with TS
    "skipLibCheck": true,                    // Skip type checking for declaration files (faster builds)
    "esModuleInterop": true,                 // Enable interoperability between CommonJS and ES Modules
    "allowSyntheticDefaultImports": true,   // Allow default imports from modules without them
    "strict": true,                         // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "moduleResolution": "node",              // Use Node module resolution strategy
    "resolveJsonModule": true,               // Allow importing JSON modules
    "isolatedModules": true,                  // Ensure every file can be transpiled independently
    "noEmit": true,                         // Do not emit JS files; handled by your build tool (e.g. Vite)
    "jsx": "react-jsx",                     // Use React 17+ JSX transform
    "baseUrl": ".",                         // Base directory for resolving non-relative modules
    "paths": {                             // Path aliases
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]                       // Include all files under src/
}
